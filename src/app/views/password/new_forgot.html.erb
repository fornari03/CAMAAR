<h1>Esqueci minha senha</h1>

<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

<% if flash[:notice] %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
<% end %>

<%= form_with url: password_forgot_path, method: :post, local: true do |f| %>
  <div>
    <%= f.label :email, "E-mail" %><br>
    <%= f.email_field :email, required: true, autofocus: true %>
  </div>

  <br>

  <div>
    <%= f.submit "Enviar link de redefinição" %>
  </div>
<% end %>

<br>

<%= link_to "Voltar para o login", login_path %>
