<!DOCTYPE html>
<html>
  <head>
    <title>CAMAAR</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <!-- Adicionando FontAwesome para os ícones (Menu, Lupa) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  </head>

  <body class="bg-gray-100 font-sans antialiased">
    
    <!-- HEADER (Barra Superior Fixa) -->
    <header class="bg-white shadow fixed w-full top-0 left-0 z-50 flex items-center justify-between px-4 py-2 h-16 border-b border-gray-200">
      <div class="flex items-center">
        <!-- Botão Menu Hambúrguer -->
        <button class="text-gray-800 text-2xl mr-4 focus:outline-none">
          <i class="fas fa-bars"></i>
        </button>
        <!-- Título da Página -->
        <h1 class="text-xl font-semibold text-gray-800">
          Gerenciamento
        </h1>
      </div>

      <div class="flex items-center space-x-4">
        <!-- Barra de Pesquisa -->
        <div class="relative hidden md:block">
          <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
            <i class="fas fa-search"></i>
          </span>
          <input type="text" 
                 placeholder="Pesquisar..." 
                 class="w-64 pl-10 pr-4 py-2 rounded-full border border-gray-300 focus:outline-none focus:border-purple-500 focus:ring-1 focus:ring-purple-500 text-sm">
        </div>

        <!-- Avatar do Usuário -->
        <div class="flex items-center justify-center w-10 h-10 rounded-full bg-purple-800 text-white font-bold text-lg cursor-pointer">
          U
        </div>
      </div>
    </header>

    <div class="flex pt-16 h-screen overflow-hidden">
      
      <!-- SIDEBAR (Barra Lateral Fixa) -->
      <aside class="w-64 bg-white border-r border-gray-200 flex-shrink-0 hidden md:flex flex-col h-full">
        <nav class="flex-1 py-4">
          <ul class="space-y-1">
            
            <% 
               base_classes = "block px-6 py-3 transition-colors"
               active_classes = "bg-purple-800 text-white font-medium"
               inactive_classes = "text-gray-700 hover:bg-gray-100 hover:text-gray-900"
            %>

            <li>
              <% is_avaliacoes_active = current_page?(root_path) || request.path.start_with?('/formularios/pendentes') %>
              <%= link_to "Avaliações", root_path, 
                  class: "#{base_classes} #{is_avaliacoes_active ? active_classes : inactive_classes}" %>
            </li>
            
            <% if current_usuario&.admin? %>
              <li>
                <% 
                   is_mgmt_active = current_page?(admin_gerenciamento_path) || (request.path.include?('/admin') && !current_page?(root_path)) 
                %>
                <%= link_to "Gerenciamento", admin_gerenciamento_path, 
                    class: "#{base_classes} #{is_mgmt_active ? active_classes : inactive_classes}" %>
              </li>
            <% end %>

          </ul>
        </nav>
      </aside>

      <!-- CONTEÚDO PRINCIPAL (Área Cinza) -->
      <main class="flex-1 bg-gray-200 overflow-y-auto p-8 relative">
        
        <!-- Flash Messages -->
        <% flash.each do |type, msg| %>
          <% color = type == 'notice' ? 'green' : 'red' %>
          <div class="mb-4 px-4 py-3 rounded relative bg-<%= color %>-100 border border-<%= color %>-400 text-<%= color %>-700" role="alert">
            <span class="block sm:inline"><%= msg %></span>
          </div>
        <% end %>

        <!-- Conteúdo dinâmico das views -->
        <%= yield %>

      </main>
    </div>

  </body>
</html>