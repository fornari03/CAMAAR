<!DOCTYPE html>
<html>
  <head>
    <title>CAMAAR</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <!-- Adicionando FontAwesome para os ícones (Menu, Lupa) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  </head>

  <body class="bg-gray-100 font-sans antialiased">
    
    <!-- HEADER (Barra Superior Fixa) -->
    <header class="bg-white shadow fixed w-full top-0 left-0 z-50 flex items-center justify-between px-4 py-2 h-16 border-b border-gray-200">
      <div class="flex items-center">
        <!-- Botão Menu Hambúrguer -->
        <button class="text-gray-800 text-2xl mr-4 focus:outline-none">
          <i class="fas fa-bars"></i>
        </button>
        <!-- Título da Página -->
        <h1 class="text-xl font-semibold text-gray-800">
          Gerenciamento
        </h1>
      </div>

      <div class="flex items-center space-x-4">
        <!-- Barra de Pesquisa -->
        <div class="relative hidden md:block">
          <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
            <i class="fas fa-search"></i>
          </span>
          <input type="text" 
                 placeholder="Pesquisar..." 
                 class="w-64 pl-10 pr-4 py-2 rounded-full border border-gray-300 focus:outline-none focus:border-purple-500 focus:ring-1 focus:ring-purple-500 text-sm">
        </div>

        <!-- Avatar do Usuário -->
        <div class="relative ml-3">
          <details class="group">
            <summary class="list-none cursor-pointer focus:outline-none">
              <div class="flex items-center justify-center w-10 h-10 rounded-full bg-purple-800 text-white font-bold text-lg hover:bg-purple-900 transition-colors shadow-md">
                <%= current_usuario.nome&.first&.upcase || 'U' %>
              </div>
            </summary>

            <div class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 z-50 border border-gray-200">
              
              <%= button_to logout_path, method: :delete, class: "block w-full text-left px-2 py-2 text-sm text-red-600 hover:bg-red-50 hover:text-red-800 transition-colors" do %>
                <div class="flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15m3 0l3-3m0 0l-3-3m3 3H9" />
                  </svg>
                  Sair
                </div>
              <% end %>
              
            </div>
          </details>
        </div>
      </div>
    </header>

    <div class="flex pt-16 h-screen overflow-hidden">
      
      <!-- SIDEBAR (Barra Lateral Fixa) -->
      <aside class="w-64 bg-white border-r border-gray-200 flex-shrink-0 hidden md:flex flex-col h-full">
        <nav class="flex-1 py-4">
          <ul class="space-y-1">
            
            <% 
               base_classes = "block px-6 py-3 transition-colors"
               active_classes = "bg-purple-800 text-white font-medium"
               inactive_classes = "text-gray-700 hover:bg-gray-100 hover:text-gray-900"
            %>

            <li>
              <% is_avaliacoes_active = current_page?(root_path) || request.path.start_with?('/formularios/pendentes') %>
              <%= link_to "Avaliações", root_path, 
                  class: "#{base_classes} #{is_avaliacoes_active ? active_classes : inactive_classes}" %>
            </li>
            
            <% if current_usuario&.admin? %>
              <li>
                <% 
                   is_mgmt_active = current_page?(admin_gerenciamento_path) || (request.path.include?('/admin') && !current_page?(root_path)) 
                %>
                <%= link_to "Gerenciamento", admin_gerenciamento_path, 
                    class: "#{base_classes} #{is_mgmt_active ? active_classes : inactive_classes}" %>
              </li>
            <% end %>

          </ul>
        </nav>
      </aside>

      <!-- CONTEÚDO PRINCIPAL (Área Cinza) -->
      <main class="flex-1 bg-gray-200 overflow-y-auto p-8 relative">
        
        <!-- Flash Messages -->
        <% flash.each do |type, msg| %>
          <% color = type == 'notice' ? 'green' : 'red' %>
          <div class="mb-4 px-4 py-3 rounded relative bg-<%= color %>-100 border border-<%= color %>-400 text-<%= color %>-700" role="alert">
            <span class="block sm:inline"><%= msg %></span>
          </div>
        <% end %>

        <!-- Conteúdo dinâmico das views -->
        <%= yield %>

      </main>
    </div>
    <style>
      /* Remove a seta padrão do elemento summary */
      details > summary {
        list-style: none;
      }
      details > summary::-webkit-details-marker {
        display: none;
      }
    </style>
    <script>
      // Fecha o dropdown se clicar fora dele
      document.addEventListener('click', function(e) {
        const details = document.querySelectorAll('details');
        details.forEach((detail) => {
          if (detail.hasAttribute('open') && !detail.contains(e.target)) {
            detail.removeAttribute('open');
          }
        });
      });
    </script>
  </body>
</html>